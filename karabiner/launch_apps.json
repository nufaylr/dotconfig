{
    "title": "Launch apps",
    "rules": [
      {
        "description": "Launch apps by right command + letters. (b=brave, n=notes, t=msteams, o=outlook, v=vscode, c=Alacritty)",
        "manipulators": [
         {
            "type": "basic",
            "from": {
              "key_code": "b",
              "modifiers": {
                "mandatory": [
                  "right_command"
                ],
                "optional": [
                  "caps_lock"
                ]
              }
            },
            "to": [
              {
                "shell_command": "open /Applications/Brave\\ Browser.app"
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "n",
              "modifiers": {
                "mandatory": [
                  "right_command"
                ],
                "optional": [
                  "caps_lock"
                ]
              }
            },
            "to": [
              {
                "shell_command": "open /System/Applications/Notes.app"
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "t",
              "modifiers": {
                "mandatory": [
                  "right_command"
                ],
                "optional": [
                  "caps_lock"
                ]
              }
            },
            "to": [
              {
                "shell_command": "open /Applications/Microsoft\\ Teams.app"
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "o",
              "modifiers": {
                "mandatory": [
                  "right_command"
                ],
                "optional": [
                  "caps_lock"
                ]
              }
            },
            "to": [
              {
                "shell_command": "open /Applications/Microsoft\\ Outlook.app"
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "v",
              "modifiers": {
                "mandatory": [
                  "right_command"
                ],
                "optional": [
                  "caps_lock"
                ]
              }
            },
            "to": [
              {
                "shell_command": "open /Applications/Visual\\ Studio\\ Code.app"
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "c",
              "modifiers": {
                "mandatory": [
                  "right_command"
                ],
                "optional": [
                  "caps_lock"
                ]
              }
            },
            "to": [
              {
                "shell_command": "open /Applications/Alacritty.app"
              }
            ]
          }
        ]
      }
    ]
  }
