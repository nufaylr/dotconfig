{
    "rules": [
      {
        "description": "Change caps_lock to command+control+option+shift and esc",
        "manipulators": [
          {
            "from": {
              "key_code": "caps_lock",
              "modifiers": {
                "optional": [
                  "any"
                ]
              }
            },
            "to": [
              {
                "key_code": "left_shift",
                "modifiers": [
                  "left_command",
                  "left_control",
                  "left_option"
                ]
              }
            ],
            "to_if_alone": [
              {
                "key_code": "escape"
              }
            ],
            "type": "basic"
          }
        ]
      }
    ]
  }